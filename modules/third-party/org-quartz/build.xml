<?xml version="1.0"?>
<!DOCTYPE project>

<project>
	<property name="original.lib.name" value="quartz" />
	<property name="original.lib.url" value="http://grepcode.com/snapshot/repo1.maven.org/maven2/org.quartz-scheduler/quartz/2.1.7" />
	<property name="original.lib.version" value="2.1.7" />

	<import file="../../../tools/sdk/build-common-osgi-plugin.xml" />

	<property name="auto.deploy.dir" value="${liferay.home}/osgi/modules" />

	<target name="compile">
		<process-ivy
			module.dir="${basedir}"
		/>

		<unzip
			dest="classes"
			src="../../../lib/portal/${original.lib.name}.jar"
		/>

		<antcall target="patch">
			<param name="patch.destination" value="**/org/quartz/impl/jdbcjobstore/JobStoreSupport.java" />
			<param name="patch.original.lib.name" value="${original.lib.name}" />
			<param name="patch.original.lib.url" value="${original.lib.url}" />
			<param name="patch.original.lib.version" value="${original.lib.version}" />
			<param name="patch.source" value="patches" />
		</antcall>

		<compile
			module.dir="${basedir}"
		/>
	</target>

	<target name="deploy">
		<deploy
			module.dir="${basedir}"
		/>

		<copy file="${plugin.file}" tofile="../../../lib/portal/quartz.jar" />
	</target>
</project>